
<div class="container mt-5 offset-3">
  <div class="row mt-4">
    <div class="mx-5 col-lg-7 col-md-12 col-sm-12 ">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center font-weight-light my-4">Sign up</h3>
        </div>
        <div class="card-body">
          <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show">
              <%= msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs"> 
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2", placeholder: "Digite seu e-mail" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2", placeholder: "Digite sua senha" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2", placeholder: "Confirme sua senha" %>
            </div>
            <div class="form-actions mt-3 mb-3 d-flex justify-content-center">
              <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>          
            </div>
            <div class="card-footer d-flex justify-content-around">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
