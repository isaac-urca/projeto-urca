
<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex align-items-center mb-3">
      <img src="https://via.placeholder.com/40" alt="Avatar do Usuário" class="profile-img me-2">
      <input type="text" class="form-control rounded-pill" placeholder="No que você está pensando, Nome do Usuário?">
    </div>
    <hr>
    <div class="d-flex justify-content-around">
      <button class="btn btn-light flex-grow-1 mx-1"><i class="bi bi-camera-video me-1"></i> Vídeo ao Vivo</button>
      <button class="btn btn-light flex-grow-1 mx-1"><i class="bi bi-image me-1"></i> Foto/Vídeo</button>
      <button class="btn btn-light flex-grow-1 mx-1"><i class="bi bi-emoji-smile me-1"></i>
        Sentimento/Atividade</button>
        <%= link_to 'Novo Post' , new_post_path %>
    </div>
  </div>
</div>
<% @posts.each do |post| %>
    <%= render post %>
<% end %>


  